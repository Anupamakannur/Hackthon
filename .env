# Environment Configuration
# Copy this file to .env and update the values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///resume_evaluator.db
# For PostgreSQL: postgresql://username:password@localhost:5432/database_name
# For MySQL: mysql://username:password@localhost:3306/database_name

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-3.5-turbo

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Evaluation Configuration
EVALUATION_TIMEOUT=300  # 5 minutes in seconds
BATCH_EVALUATION_LIMIT=50

# Parsing Configuration
PARSING_TIMEOUT=60  # 1 minute in seconds
MAX_CONCURRENT_PARSING=5

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300  # 5 minutes in seconds

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=1000 per hour

# API Configuration
API_RATE_LIMIT=1000 per hour
API_PAGE_SIZE=20

# Backup Configuration
BACKUP_FOLDER=backups
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
ENABLE_METRICS=false
METRICS_PORT=9090

# Security Configuration
WTF_CSRF_ENABLED=true
WTF_CSRF_TIME_LIMIT=3600  # 1 hour in seconds

# Session Configuration
PERMANENT_SESSION_LIFETIME=86400  # 24 hours in seconds
